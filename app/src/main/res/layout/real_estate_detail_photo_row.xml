<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/real_estate_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/fragment_real_estate_detail_margin"
        android:layout_marginVertical="20dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/real_estate_detail_photo_row_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/real_estate_photo"
        app:layout_constraintStart_toStartOf="@+id/real_estate_photo"
        app:layout_constraintEnd_toEndOf="@+id/real_estate_photo"
        android:layout_marginBottom="@dimen/fragment_real_estate_detail_margin"
        android:background="#75000000"
        android:padding="6dp"
        android:text="facade"/>

</androidx.constraintlayout.widget.ConstraintLayout>