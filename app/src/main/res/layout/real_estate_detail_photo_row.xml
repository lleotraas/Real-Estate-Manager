<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_margin="@dimen/fragment_real_estate_detail_margin">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/real_estate_detail_photo_row_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/real_estate_detail_photo_row_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/real_estate_detail_photo_row_img"
        app:layout_constraintStart_toStartOf="@+id/real_estate_detail_photo_row_img"
        app:layout_constraintEnd_toEndOf="@+id/real_estate_detail_photo_row_img"
        android:gravity="center"
        android:background="#75000000"
        android:padding="6dp"
        android:text="facade"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>