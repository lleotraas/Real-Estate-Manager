<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/fragment_detail_photo_row_width"
    android:layout_height="@dimen/fragment_detail_photo_row_height">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/real_estate_detail_photo_row_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/real_estate_detail_photo_row_fullscreen_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/real_estate_detail_photo_row_img"
        app:layout_constraintEnd_toEndOf="@+id/real_estate_detail_photo_row_img"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_fullscreen" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/real_estate_detail_photo_row_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/real_estate_detail_photo_row_img"
        app:layout_constraintStart_toStartOf="@+id/real_estate_detail_photo_row_img"
        app:layout_constraintEnd_toEndOf="@+id/real_estate_detail_photo_row_img"
        android:gravity="center"
        android:background="@color/fragment_detail_photo_row_category_tv_background"
        android:padding="@dimen/padding_normal"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>