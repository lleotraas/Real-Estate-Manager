<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/filter_fragment_box_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:text="@string/category_dialog_box_title"
        android:textSize="@dimen/fragment_real_estate_add_title_text_size"
        android:textStyle="bold"
        android:layout_margin="@dimen/fragment_real_estate_detail_margin_large"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/filter_fragment_seek_bar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/filter_fragment_box_title"
        android:text="@string/filter_fragment_seek_bar_title_default"
        android:layout_marginStart="@dimen/fragment_real_estate_detail_margin_large"
        android:layout_marginTop="@dimen/fragment_real_estate_detail_margin_xxlarge" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/filter_fragment_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/filter_fragment_seek_bar_title"
        android:focusable="false"
        android:textSize="@dimen/fragment_real_estate_add_title_text_size"
        android:layout_marginBottom="@dimen/fragment_real_estate_detail_margin_large"
        android:max="23" />

    <TextView
        android:id="@+id/filter_fragment_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/filter_fragment_seek_bar"
        android:text="@string/filter_fragment_price"
        android:textSize="@dimen/fragment_real_estate_add_title_text_size"
        android:textStyle="bold"
        android:layout_margin="@dimen/fragment_real_estate_detail_margin"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/filter_fragment_min_price"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/filter_fragment_price"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="number"
        android:hint="@string/filter_fragment_min_price" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/filter_fragment_max_price"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/filter_fragment_min_price"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="number"
        android:hint="@string/filter_fragment_max_price" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/filter_fragment_search_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/fragment_real_estate_detail_margin_large"
        android:text="@string/filter_fragment_search_btn"
        android:textSize="@dimen/fragment_real_estate_add_title_text_size"/>

</androidx.constraintlayout.widget.ConstraintLayout>