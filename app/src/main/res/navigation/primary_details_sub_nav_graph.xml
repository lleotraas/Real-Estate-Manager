<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_details"
    app:startDestination="@id/sub_graph_fragment_item_detail">
    <fragment
        android:id="@+id/sub_graph_fragment_item_detail"
        android:name="com.openclassrooms.realestatemanager.ui.detail.ItemDetailFragment"
        android:label="@string/title_item_detail"
        tools:layout="@layout/fragment_item_detail">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
        <action
            android:id="@+id/sub_navigate_from_details_to_maps"
            app:destination="@id/sub_graph_fragment_map_view" />
        <action
            android:id="@+id/sub_navigate_from_details_to_fullscreen"
            app:destination="@id/sub_graph_fragment_fullscreen" />
    </fragment>

    <fragment
        android:id="@+id/sub_graph_fragment_map_view"
        android:name="com.openclassrooms.realestatemanager.ui.map.MapViewFragment"
        android:label="@string/title_map_view"
        tools:layout="@layout/fragment_map_view">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
        <action
            android:id="@+id/sub_navigate_from_maps_to_details"
            app:destination="@id/sub_graph_fragment_item_detail" />
    </fragment>

    <fragment
        android:id="@+id/sub_graph_fragment_fullscreen"
        android:name="com.openclassrooms.realestatemanager.ui.fullscreen.FullScreenFragment"
        android:label="@string/title_map_view"
        tools:layout="@layout/fragment_map_view">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
        <action
            android:id="@+id/sub_navigate_from_fullscreen_to_details"
            app:destination="@id/sub_graph_fragment_item_detail" />
    </fragment>

</navigation>