<resources>

    <!-- Base application theme. -->
    <style name="RealEstate" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:imageButtonStyle">@style/image_button</item>
    </style>

    <!-- Home screen Theme -->
    <style name="RealEstate.Home">
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <!-- Detail screen Theme -->
    <style name="RealEstate.Detail">
        <item name="android:windowBackground">@color/background_gray</item>
    </style>

    <!-- TEXT VIEW -->
    <style name="TextView" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextView.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- BUTTON -->
    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/rounded_border</item>
    </style>

    <style name="image_button" parent="">
        <item name="backgroundColor">@color/colorAccent</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorAccent</item>

    </style>

</resources>
