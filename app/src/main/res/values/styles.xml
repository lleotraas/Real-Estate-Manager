<resources>

    <!-- Base application theme. -->
    <style name="RealEstate" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="seekBarStyle">@style/seek_bars</item>
    </style>

    <!-- Home screen Theme -->
    <style name="RealEstate.Home">
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <!-- Detail screen Theme -->
    <style name="RealEstate.Detail">
        <item name="android:windowBackground">@color/background_gray</item>
    </style>

    <!-- TEXT VIEW -->
    <style name="TextView" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_marginStart">@dimen/margin_normal_size</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal_size</item>
    </style>

    <style name="TextView.detail_description" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_marginStart">@dimen/margin_xx_large</item>
    </style>

    <style name="TextView.Title">
        <item name="android:textSize">@dimen/text_large_size</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_large_size</item>
        <item name="android:layout_marginStart">@dimen/margin_normal_size</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal_size</item>
        <item name="android:drawablePadding">@dimen/padding_normal</item>
    </style>

    <style name="TextView.Seek_bar_indicator">
        <item name="android:textSize">@dimen/text_large_size</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_x_large</item>
        <item name="android:layout_marginStart">@dimen/margin_large_size</item>
        <item name="android:drawablePadding">@dimen/padding_normal</item>
    </style>

    <!-- EDIT TEXT -->
    <style name="edit_text" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_margin">@dimen/margin_large_size</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="autocomplete_textview" parent="@style/Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_marginStart">@dimen/margin_large_size</item>
        <item name="android:layout_marginEnd">@dimen/margin_large_size</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- BUTTON -->
    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_border_full</item>
        <item name="android:layout_margin">@dimen/margin_large_size</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:elevation">40dp</item>
        <item name="android:minWidth">220dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="image_button">
        <item name="android:textColorHint">@color/textColorPrimary</item>
        <item name="android:minHeight">@dimen/fragment_detail_price_btn_min_height</item>
        <item name="android:textSize">@dimen/text_large_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginTop">@dimen/margin_large_size</item>
        <item name="android:layout_marginStart">@dimen/margin_normal_size</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal_size</item>
        <item name="android:drawablePadding">@dimen/padding_normal</item>
    </style>

    <!-- SEEK BAR -->
    <style name="seek_bars" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumbTint">@color/colorAccent</item>
        <item name="android:layout_marginStart">@dimen/margin_large_size</item>
        <item name="android:layout_marginEnd">@dimen/margin_large_size</item>
        <item name="android:layout_marginTop">@dimen/margin_normal_size</item>
    </style>

</resources>
